rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
        }
 
    // Live quizzes collection
    match /liveQuizzes/{quizId} {
      // Allow read for all authenticated users (for public live quiz participation)
      allow read, list: if isAuthenticated();
      
      // Allow create if user is authenticated
      allow create: if isAuthenticated() && 
        request.auth.uid == request.resource.data.createdBy;
      
      // Allow update if user is creator, admin, or moderator
      allow update: if isAuthenticated() && (
        request.auth.uid == resource.data.createdBy || 
        isAdmin() ||
        isModerator()
      );
      
      // Allow delete if user is creator or admin
      allow delete: if isAuthenticated() && (
        request.auth.uid == resource.data.createdBy || 
        isAdmin()
      );
    }
 
    // Live quiz results (separate from regular quizResults)
    match /liveQuizResults/{resultId} {
      // Allow anyone to read leaderboard/results summaries
      allow read, list: if true;

      // Allow creation from clients (used by live quiz completion flow)
      // NOTE: tighten later to require auth or Cloud Functions if needed
      allow create: if true;

      // Only admins can modify or delete existing results
      allow update, delete: if isAuthenticated() && isAdmin();
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function isCreator(quizData) {
      return request.auth.uid == quizData.createdBy;
    }
    
    function isAdmin() {
      // Check if user has admin role in users collection
      return exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    function isModerator() {
      // Check if user has moderator role in users collection
      return exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'moderator';
    }
    
    function isAdminOrModerator() {
      return isAdmin() || isModerator();
    }
    
    function isPublished(quizData) {
      return quizData.isPublished == true;
    }
    
    // Quiz rules with enhanced permissions
    match /quizzes/{quizId} {
      // Allow read if:
      // - User is authenticated (all authenticated users can read any quiz)
      // - This allows for better collaboration and sharing
      allow read: if isAuthenticated();
      
      // Allow create if user is authenticated
      allow create: if isAuthenticated() && 
        request.auth.uid == request.resource.data.createdBy;
      
      // Allow update if:
      // - User is authenticated AND
      // - User is creator OR user is admin OR user is moderator
      allow update: if isAuthenticated() && (
        isCreator(resource.data) || 
        isAdmin() ||
        isModerator()
      );
      
      // Allow delete if:
      // - User is authenticated AND
      // - User is creator OR user is admin
      allow delete: if isAuthenticated() && (
        isCreator(resource.data) || 
        isAdmin()
      );
      
      // Allow list if user is authenticated (for private quizzes) or for public access
      allow list: if isAuthenticated();
    }
    
    // Quiz results rules
    match /quizResults/{resultId} {
      // Allow read if:
      // - User is authenticated AND
      // - User owns the result OR user is admin OR user is moderator OR user is quiz creator
      allow read: if isAuthenticated() && (
        isOwner(resource.data.userId) || 
        isAdmin() ||
        isModerator() ||
        isCreator(get(/databases/$(database)/documents/quizzes/$(resource.data.quizId)).data)
      );
      
      // Allow create if user is authenticated and owns the result
      allow create: if isAuthenticated() && 
        request.auth.uid == request.resource.data.userId;
      
      // Allow update if user owns the result
      allow update: if isAuthenticated() && 
        isOwner(resource.data.userId);
      
      // Allow delete if:
      // - User owns the result OR
      // - User is admin OR
      // - User is quiz creator
      allow delete: if isAuthenticated() && (
        isOwner(resource.data.userId) || 
        isAdmin() ||
        isCreator(get(/databases/$(database)/documents/quizzes/$(resource.data.quizId)).data)
      );
      
      // Allow list if user is authenticated
      allow list: if isAuthenticated();
    }
    
    // Users collection for role management
    match /users/{userId} {
      // Allow read if user owns the document or is admin
      allow read: if isAuthenticated() && (
        isOwner(userId) || 
        isAdmin()
      );
      
      // Allow create if user is creating their own document
      allow create: if isAuthenticated() && 
        isOwner(userId);
      
      // Allow update if user owns the document or is admin
      allow update: if isAuthenticated() && (
        isOwner(userId) || 
        isAdmin()
      );
      
      // Allow delete if user is admin
      allow delete: if isAuthenticated() && isAdmin();
    }
    
    // Analytics collection for quiz performance data
    match /analytics/{analyticsId} {
      // Allow read if user is admin, moderator, or quiz creator
      allow read: if isAuthenticated() && (
        isAdmin() ||
        isModerator() ||
        isCreator(get(/databases/$(database)/documents/quizzes/$(resource.data.quizId)).data)
      );
      
      // Allow create if user is authenticated
      allow create: if isAuthenticated();
      
      // Allow update/delete if user is admin
      allow update, delete: if isAuthenticated() && isAdmin();
    }
    
    // Quiz leaderboards collection for real-time leaderboards
    match /quiz-leaderboards/{leaderboardId} {
      // Allow read for all authenticated users (for viewing leaderboards)
      allow read: if isAuthenticated();
      
      // Allow create if user is authenticated (for initial leaderboard creation)
      allow create: if isAuthenticated();
      
      // Allow update if user is authenticated (for updating scores)
      allow update: if isAuthenticated();
      
      // Allow delete if user is admin
      allow delete: if isAuthenticated() && isAdmin();
    }
  }
}
